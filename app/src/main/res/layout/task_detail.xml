<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	tools:context="todomore.androidfirebase.TaskDetailFragment" >

    <TextView
            android:id="@+id/task_detail_description"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textIsSelectable="true"
			/>

    <TableRow android:padding="3dp">

        <TextView android:text="Priority"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/task_detail_priority"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textIsSelectable="true"
            tools:context="todomore.androidfirebase.TaskDetailFragment" />

        <TextView android:text="Status"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/task_detail_status"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textIsSelectable="true"
            tools:context="todomore.androidfirebase.TaskDetailFragment" />
    </TableRow>

    <TableRow android:padding="3dp">

        <TextView android:text="Context"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/task_detail_context"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textIsSelectable="true"
            tools:context="todomore.androidfirebase.TaskDetailFragment" />

        <TextView android:text="Project"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/task_detail_project"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textIsSelectable="true"
            tools:context="todomore.androidfirebase.TaskDetailFragment" />
    </TableRow>


    <TableRow android:padding="3dp">
        <TextView android:text="Since"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/task_detail_created"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textIsSelectable="true"
            tools:context="todomore.androidfirebase.TaskDetailFragment" />
    </TableRow>
</TableLayout>
