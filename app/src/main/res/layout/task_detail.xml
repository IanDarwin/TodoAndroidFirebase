<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	tools:context="todomore.androidfirebase.TaskDetailFragment" >

    <TextView
            android:id="@+id/task_detail_description"
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:padding="16dp"
            android:textIsSelectable="true"
			/>

    <TableRow android:padding="6dp">

        <TextView android:text="Priority"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/task_detail_priority"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textIsSelectable="true"
            tools:context="todomore.androidfirebase.TaskDetailFragment" />
    </TableRow>

    <TableRow android:padding="6dp">
        <TextView android:text="Status"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/task_detail_status"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textIsSelectable="true"
            tools:context="todomore.androidfirebase.TaskDetailFragment" />
    </TableRow>


</TableLayout>
